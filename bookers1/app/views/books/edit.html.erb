<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <p>error can't be blank</p>
<% end %>

<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p><%= f.submit 'Update Book' %></p>
<% end %>
<%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>